<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
        <h3 class="mb-0">Panel Administracyjny</h3>
        <div>
          <%= link_to "üîç Skaner QR", scanner_participants_path, 
              class: "btn btn-info btn-sm" %>
          <%= link_to "üóëÔ∏è Usu≈Ñ wszystkich", clear_all_participants_path, 
              method: :delete,
              class: "btn btn-danger btn-sm ms-2",
              data: { confirm: "Czy na pewno chcesz usunƒÖƒá wszystkich uczestnik√≥w? Ta operacja jest nieodwracalna!" } %>
        </div>
      </div>
      <div class="card-body">
        <div class="row mb-4">
          <div class="col-md-3">
            <div class="card bg-primary text-white">
              <div class="card-body text-center">
                <h3><%= @statistics[:total] %></h3>
                <p>≈ÅƒÖczne rejestracje</p>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card bg-success text-white">
              <div class="card-body text-center">
                <h3><%= @statistics[:confirmed] %></h3>
                <p>Potwierdzone</p>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card bg-info text-white">
              <div class="card-body text-center">
                <h3><%= @statistics[:scanned] %></h3>
                <p>Obecni</p>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card bg-warning text-dark">
              <div class="card-body text-center">
                <h3><%= @statistics[:attendance_percentage] %>%</h3>
                <p>Frekwencja</p>
              </div>
            </div>
          </div>
        </div>
        
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>ID</th>
                <th>Imiƒô i nazwisko</th>
                <th>Email</th>
                <th>Potwierdzona</th>
                <th>Skanowana</th>
                <th>Data rejestracji</th>
                <th>Akcje</th>
              </tr>
            </thead>
            <tbody>
              <% @participants.each do |participant| %>
                <tr>
                  <td><%= participant.id %></td>
                  <td><%= participant.full_name %></td>
                  <td><%= participant.email %></td>
                  <td>
                    <% if participant.confirmed? %>
                      <span class="badge bg-success">Tak</span>
                    <% else %>
                      <span class="badge bg-warning">Nie</span>
                    <% end %>
                  </td>
                  <td>
                    <% if participant.scanned_at.present? %>
                      <span class="badge bg-info">
                        <%= participant.scanned_at.strftime("%d.%m %H:%M") %>
                      </span>
                    <% else %>
                      <span class="badge bg-secondary">Nie</span>
                    <% end %>
                  </td>
                  <td><%= participant.created_at.strftime("%d.%m.%Y %H:%M") %></td>
                  <td>
                    <%= link_to "Poka≈º", participant, class: "btn btn-sm btn-outline-primary" %>
                    <% unless participant.confirmed? %>
                      <%= link_to "Potwierd≈∫", confirm_participant_path(participant), 
                          class: "btn btn-sm btn-success" %>
                    <% end %>
                    <%= link_to "Usu≈Ñ", participant, 
                        method: :delete,
                        class: "btn btn-sm btn-danger",
                        data: { confirm: "Czy na pewno chcesz usunƒÖƒá uczestnika #{participant.full_name}?" } %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        
        <% if @participants.empty? %>
          <div class="text-center py-5">
            <p class="text-muted">Brak rejestracji</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
