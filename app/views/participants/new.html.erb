<div class="row">
  <div class="col-lg-6 mx-auto">
    <div class="card">
      <div class="card-header bg-primary text-white">
        <h3 class="mb-0">Rejestracja na wydarzenie</h3>
      </div>
      <div class="card-body">
        <%= form_with model: @participant, local: true, class: "needs-validation", novalidate: true do |form| %>
          <% if @participant.errors.any? %>
            <div class="alert alert-danger">
              <h6>Wystąpiły następujące błędy:</h6>
              <ul class="mb-0">
                <% @participant.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= form.label :first_name, "Imię", class: "form-label" %>
            <%= form.text_field :first_name, class: "form-control", required: true %>
            <div class="invalid-feedback">
              Proszę podać imię.
            </div>
          </div>

          <div class="mb-3">
            <%= form.label :last_name, "Nazwisko", class: "form-label" %>
            <%= form.text_field :last_name, class: "form-control", required: true %>
            <div class="invalid-feedback">
              Proszę podać nazwisko.
            </div>
          </div>

          <div class="mb-4">
            <%= form.label :email, "Adres email", class: "form-label" %>
            <%= form.email_field :email, class: "form-control", required: true %>
            <div class="invalid-feedback">
              Proszę podać prawidłowy adres email.
            </div>
            <small class="form-text text-muted">
              Na ten adres zostanie wysłane potwierdzenie rejestracji z kodem QR.
            </small>
          </div>

          <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="terms" required>
            <label class="form-check-label" for="terms">
              Akceptuję regulamin wydarzenia i wyrażam zgodę na przetwarzanie danych osobowych
            </label>
            <div class="invalid-feedback">
              Musisz zaakceptować regulamin.
            </div>
          </div>

          <div class="d-grid gap-2">
            <%= form.submit "Zarejestruj się", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>
        
        <div class="text-center mt-3">
          <%= link_to "Powrót do strony głównej", root_path, class: "btn btn-outline-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
// Bootstrap form validation
(function() {
  'use strict';
  window.addEventListener('load', function() {
    var forms = document.getElementsByClassName('needs-validation');
    var validation = Array.prototype.filter.call(forms, function(form) {
      form.addEventListener('submit', function(event) {
        if (form.checkValidity() === false) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  }, false);
})();
</script>
